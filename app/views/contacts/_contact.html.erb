<div class="fr-card fr-card--horizontal fr-card--no-arrow token-card" id="<%= dom_id(contact) %>">
  <div class="fr-card__body">
    <div class="fr-card__content">
      <h4 class="fr-card__title">
        <%= t(".subtitle_#{contact.contact_type}") %>
      </h4>

      <div class="fr-card__desc">
        <label class="fr-label" for="<%= dom_id(contact, :email) %>"><%= t('.email_label') %></label>
        <input id="<%= dom_id(contact, :email) %>" class="fr-input" type="text" readonly value="<%= contact.email %>" />

        <label class="fr-label" for="<%= dom_id(contact, :phone) %>"><%= t('.phone_label') %></label>
        <input id="<%= dom_id(contact, :phone) %>" class="fr-input" type="text" readonly value="<%= contact.phone_number %>" />

        <% if current_user_admin? %>
          <div class="actions">
            <ul class="fr-btns-group fr-btns-group--inline fr-btns-group--icon-left">
              <li>

                <%= button_to t('.actions.update'), edit_admin_contact_path(contact), method: :get, id: dom_id(contact, :edit_button), class: %w(fr-btn) %>
              </li>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
