<div class="fr-header__tools-links">
  <ul class="fr-links-group">
    <% if user_signed_in? %>
      <li>
        <a class="fr-link fr-icon-<%= t('.links.user_connected.icon') %>" href="<%= user_profile_path %>">
          <%= current_user.full_name %>
        </a>
      </li>
      <li>
        <a class="fr-link fr-icon-<%= t('.links.sign_out.icon') %>" id="logout_button" href="<%= logout_path %>" target="_self" data-method="delete">
          <%= t('.links.sign_out.title') %>
        </a>
      </li>
    <% else %>
      <li>
        <%= link_to(t('.links.sign_in.title'), login_path, class: "fr-link fr-icon-#{t(".links.sign_in.icon")}", id: 'login_header') %>
      </li>
    <% end %>
  </ul>
</div>
