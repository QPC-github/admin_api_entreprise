<section id="section-partners" class="fr-p-6w">
  <div class="fr-container">
    <div class="fr-grid-row">
      <h3 class="fr-ml-2v fr-col-12">Ils partagent les données au travers d’API Entreprise :</h3>
      <p class="fr-ml-2v fr-col-12">Découvrez les API de chaque fournisseur de données.</p>

      <div class="providers center">
        <% @providers.each do |provider| %>
        <div class="card-provider fr-m-2v fr-pt-2w fr-pr-2w fr-pl-2w">
          <%= image_tag("providers/#{provider}.png") %>
          <h5 class="fr-pt-1v fr-pb-1v"><%= provider.upcase %></h5>
        </div>
        <% end %>
      </div>

      <div class="buttons fr-mt-3w">
        <a href="/endpoints" class="fr-btn fr-m-1w ">Consulter toutes les API&nbsp;<span class="fr-icon-arrow-right-line" aria-hidden="true" /></a>

        <button class="fr-btn fr-btn--secondary fr-m-1w" disabled>Proposer une nouvelle API</button>
      </div>
    </div>
  </div>
</section>
