<h2>Profil de l'organisation</h2>

<p>Adresse email : <%= @user.email %></p>
<p>Siret de l'organisation : <%= @user.context %></p>

<%= form_with url: '/profile/transfer_account', method: :post, id: dom_id(@user, :transfer_account) do |form| %>
  <%= form.label :email, 'Déléguer le compte utilisateur : ' %>
  <%= form.email_field :email, placeholder: 'Adresse email du destinataire...' %>
  <%= form.submit 'Confirmer' %>
<% end %>
